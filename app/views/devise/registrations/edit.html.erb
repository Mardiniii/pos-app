<div class="row">
  <div class="col-md-4 col-md-offset-4">
  <h2 class="text-center">EDIT <%= resource_name.to_s.humanize.upcase %></h2>
  <div class="content">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    
    <div class="field form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, :class => "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :apellidos %><br />
      <%= f.text_field :last_name, :class => "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :numero_identificacion %><br />
      <%= f.text_field :identification_number, :class => "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :departamento %>
      <%= collection_select(:user, :state_id, State.all, :id, :name, {include_blank: true}, {:class => 'form-control'}) %>
    </div>

    <div class="field form-group">
      <%= f.label :ciudad %>
      <%= collection_select(:user, :city_id, City.all, :id, :name, {include_blank: true}, {:class => 'form-control'}) %>
    </div>

    <div class="field form-group">
      <%= f.label :Direccion_de_establecimiento %>
      <%= f.text_field :address, :class => 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.label :Celular_Solo_ingresa_numeros %>
      <%= f.text_field :cellphone, :class => 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.label :Telefono_Solo_ingresa_numeros %>
      <%= f.text_field :phone, :class => 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field form-group">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off", :class => 'form-control' %>
    </div>
    </div>
    <div class="actions form-group text-center">
      <%= f.submit "Update", :class => 'btn pos_button_blue' %>
    </div>
  <% end %>
  <div class="content text-center">
    <h2 class="text-center">CANCEL MY ACCOUNT</h2>
    <p class="text-center">Unhappy?</p>
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "pos_button_blue" %>
    <%= link_to "Back", :back %>
  </div>
  </div>
</div>
