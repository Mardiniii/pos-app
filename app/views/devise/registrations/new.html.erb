<p> <strong>Trabajo por hacer:</strong> Falta configurar ciudades y departamentos</p>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      
      <div class="field form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, :class => "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :apellidos %><br />
        <%= f.text_field :last_name, :class => "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :numero_identificacion %><br />
        <%= f.text_field :identification_number, :class => "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :departamento %>
        <%= collection_select(:user, :state_id, State.all, :id, :name, {include_blank: true}, {:class => 'form-control'}) %>
      </div>

      <div class="field form-group">
        <%= f.label :ciudad %>
        <%= collection_select(:user, :city_id, City.all, :id, :name, {include_blank: true}, {:class => 'form-control'}) %>
      </div>

      <div class="field form-group">
        <%= f.label :Direccion_de_establecimiento %>
        <%= f.text_field :address, :class => 'form-control' %>
      </div>

      <div class="field form-group">
        <%= f.label :Celular_Solo_ingresa_numeros %>
        <%= f.text_field :cellphone, :class => 'form-control' %>
      </div>

      <div class="field form-group">
        <%= f.label :Telefono_Solo_ingresa_numeros %>
        <%= f.text_field :phone, :class => 'form-control' %>
      </div>

      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
      </div>

      <div class="field form-group">
        <%= f.label :password %>
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
      </div>

      <div class="actions form-group">
        <%= f.submit "Sign up", :class => 'btn btn-warning' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
