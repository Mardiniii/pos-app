<div class="container">
	<div class="row">
		
		<div class="col-md-12 text-center">
			<h1>ORDEN PARA LA MESA <%= @mesa %>	</h1>
		</div>

		<div class="row">

			<div class="col-md-6 text-center">
				<h2>Agregar Producto</h2>
				<div id="categorie_options">
					<% @categories.each do |c| %>
						<%= link_to "#{c.name}", products_by_categorie_path(:categorie => "#{c.name}"), :class => 'btn pos_button_blue', remote: true %>	
					<% end %>
				</div>
				<div id="categorie_products" class="col-md-12">
				</div>
			</div>
			<div class="col-md-6 text-center">
				<h2>Orden Actual</h2>
				<div id="order_products">
					
				</div>
			</div>

		</div>
		
	</div>	
</div>