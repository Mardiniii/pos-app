<!DOCTYPE html>
<html>
<head>
  <title>PosApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<nav <% if current_page?(root_path) %>  class="navbar navbar-default navbar-fixed-top" id="navbar" <%else%> id="navbar" class="navbar navbar-default navbar-not-home"  <%end%>>
	  <div class="container">
	    <!-- Brand and toggle get grouped for better mobile display -->
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	      <%= link_to 'POS-App', root_path, class: "navbar-brand page-scroll" %>
	    </div>

	    <!-- Collect the nav links, forms, and other content for toggling -->
	    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	      <ul class="nav navbar-nav navbar-right">
			<% if current_page?(root_path) && !user_signed_in? %>
		        <li><a class="page-scroll" href="#services">Que es POS-App?</a></li>
		        <li><a class="page-scroll" href="#how_it_works">Como Funciona?</a></li>
		        <li><a class="page-scroll" href="#portfolio">Cobertura</a></li>
		        <li><a class="page-scroll" href="#team">Equipo</a></li>
		        <li><a class="page-scroll" href="#contact">Contacto</a></li>
		        <li><%= link_to 'Log In', new_user_session_path %></li>
		        <li><%= link_to 'Sign Up', new_user_registration_path %></li> 
	        <% end %>
	        <% if current_page?(root_path) && user_signed_in? %>
		        <li><a class="page-scroll" href="#services">Que es POS-App?</a></li>
		        <li><a class="page-scroll" href="#how_it_works">Como Funciona?</a></li>
		        <li><a class="page-scroll" href="#portfolio">Cobertura</a></li>
		        <li><a class="page-scroll" href="#team">Equipo</a></li>
		        <li><a class="page-scroll" href="#contact">Contacto</a></li>
		        <li> <%= link_to "#{current_user.name}", admin_path %> </li>
	        	<li> <%= link_to "Editar Perfil", edit_user_registration_path %> </li>
	        	<li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li> 
	        <% end %>
	        <% unless current_page?(root_path)%>
	        	<li class="dropdown">
	  	          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Admin<span class="caret"></span></a>
	  	          <ul class="dropdown-menu" role="menu">
	  	            <li><%= link_to 'Establecimientos', establishments_path %></li>
	  	            <li><%= link_to 'Ingredientes', ingredients_path %></li>
	  	            <li><%= link_to 'Productos', products_path %></li>
	  	            <li class="divider"></li>
	  	            <li><%= link_to 'Inventario', inventarios_path %></li>
	  	            <li>Dashboard</li>
	  	          </ul>
	  	          <li> <%= link_to "#{current_user.name}", admin_path %> </li>
	  	          <li> <%= link_to "Editar Perfil", edit_user_registration_path %> </li>
	  	          <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
  	        	</li>
  	        <% end %>
	      </ul>
	    </div><!-- /.navbar-collapse -->
	  </div><!-- /.container-fluid -->
	</nav>
		
	<%= yield %>
	
	<footer>
		<div class="container">
			<div class="row text-center">
				<div class="col-md-4">
					<span class="copyright">Copyright &copy; POS-App Company 2015</span>
				</div>
				<div class="col-md-4">
					<ul class="list-inline social-buttons">
						<li><a href="twitter pos app"><i class="fa fa-twitter"></i></a></li>
						<li><a href="facebook pos app"><i class="fa fa-facebook"></i></a></li>
						<li><a href="linkedin pos app"><i class="fa fa-linkedin"></i></a></li>
					</ul>
				</div>
				<div class="col-md-4">
					<ul class="list-inline quicklinks">
						<li><a href="">Privacy Policy</a></li>
						<li><a href="">Terms of Use</a></li>
					</ul>
				</div>
			</div>
		</div>
	</footer>

</body>
</html>
