<!DOCTYPE html>
<html>
<head>
  <title>PosApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= link_to 'Home', root_path, :class => 'btn btn-warning' %>
<% if user_signed_in? %>
	<%= link_to 'Log Out', destroy_user_session_path, method: :delete, :class => "btn btn-warning" %>
<% else %>
	<%= link_to 'Log In', new_user_session_path, class: "btn boton btn-warning" %>
	<%= link_to 'Sign Up', new_user_registration_path, class: "btn boton btn-warning" %>
<% end %>	
<div class="container">
	<%= yield %>
</div>

</body>
</html>
