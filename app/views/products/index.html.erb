<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<table class="table table-hover table-condensed">
		<tr class="text-center">
			<th>IMAGEN</th>
			<th>NOMBRE</th>
			<th>PRECIO</th>
			<th>CATEGORIA</th>
			<th>ESTABLECIMIENTO</th>
		  <th>OPCIONES</th>
		</tr>
		<% @products.each do |p| %>
			<tr>
				<td class="vert-align"> <%= image_tag p.avatar.url(:thumb) %></td>
				<td class="vert-align"> <%= p.name %></td>
				<td class="vert-align"> <%= number_to_currency(p.precio, :precision => 0) %> </td>
				<td class="vert-align"> <%= Categorie.find(p.categorie_id).name %> </td>
				<td class="vert-align"> <%= p.establishment.name %> </td>
				<td class="vert-align"> <%= link_to edit_product_path(p) do %> Editar <% end %> - <%= link_to product_path(p), method: :delete, data: { confirm: 'Are you sure?' } do %><span>Borrar</span><% end %> - <%= link_to 'Ver Receta', p %></td>
			</tr>
		<% end %>
	</table>
	<div class="row text-center">
		<%= link_to 'Agregar nuevo producto', new_product_path, :class => 'btn pos_button_blue' %>
	</div>
	</div>
</div>