<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<table class="table">
			<tr>
				<th>Name</th>
				<th>Direccion</th>
				<th>Telefono</th>
				<th>Numero de mesas</th>
				<th>Numero de sillas</th>
			  <th>Ver - Editar - Borrar</th>
			</tr>
			<tr>
				<td> <%= @establishment.name %> </td>
				<td> <%= @establishment.address %> </td>
				<td> <%= @establishment.phone %> </td>
				<td> <%= @establishment.tables_number %> </td>
				<td> <%= @establishment.seats_number %> </td>
				<td> <%= link_to 'Ver', @establishment %> - <%= link_to 'Editar', edit_establishment_path(@establishment) %> - <%= link_to establishment_path(@establishment), method: :delete, data: { confirm: 'Are you sure?' } do %><span>Borrar</span><% end %></td>
			</tr>
		</table>
		<%= link_to 'Agregar establecimiento', new_establishment_path %>
	</div>
</div>
